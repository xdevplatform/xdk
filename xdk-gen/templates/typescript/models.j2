/**
 * Models for {{ tag.display_name }} operations
 */

{% for operation in operations -%}
{% if operation.request_body -%}
{% set content_type = "application/json" -%}
{% if operation.request_body.content and operation.request_body.content[content_type] -%}
{% set schema = operation.request_body.content[content_type].schema -%}
/**
 * Request body for {{ operation.method_name }}{% if schema and schema.description %}
 * {{ schema.description }}{% endif %}
 */
export interface {{ operation.class_name }}Request {
{% if schema and schema.properties -%}
{% for key in schema.properties -%}
{% set prop = schema.properties[key] -%}
{% if prop.description and prop.description != "none" and prop.description != "" -%}
  /** {{ prop.description }} */
{% endif -%}
  {{ key | camel_case }}{% if not prop.required %}?{% endif %}: {% if prop.type %}{{ prop.type | typescript_type }}{% else %}any{% endif %};
{% endfor -%}
{% endif -%}
}

{% endif -%}
{% endif -%}
{% if operation.responses and "200" in operation.responses or operation.responses and "201" in operation.responses -%}
{% set response = operation.responses["200"] if "200" in operation.responses else operation.responses["201"] -%}
{% if response.content and "application/json" in response.content -%}
{% set schema = response.content["application/json"].schema -%}
/**
 * Response for {{ operation.method_name }}{% if schema and schema.description %}
 * {{ schema.description }}{% endif %}
 */
export interface {{ operation.class_name }}Response {
{% if schema and schema.properties -%}
{% for key in schema.properties -%}
{% set prop = schema.properties[key] -%}
{% if prop.description and prop.description != "none" and prop.description != "" -%}
  /** {{ prop.description }} */
{% endif -%}
  {{ key | camel_case }}{% if not prop.required %}?{% endif %}: {% if prop.type %}{{ prop.type | typescript_type }}{% else %}any{% endif %};
{% endfor -%}
{% endif -%}
}

{% endif -%}
{% endif -%}
{% endfor -%} 